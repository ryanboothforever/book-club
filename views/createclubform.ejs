<%- include('partials/header') -%>
<div class="container">
  <div class="row">
    <div class="col">
      <form id="createClubForm" action="clubs/createClub" enctype="application/x-www-form-urlencoded" method="POST">
        <p>Create a new club:</p>
        <div>
          <input type="text" class="form-control" id="bookTitle" name="bookTitle" placeholder="Book title" required>
        </div>
        <div>
          <input type="text" class="form-control" id="bookAuthor" name="bookAuthor" placeholder="Book Author" required>
        </div>
        <div>
          <input type="text" class="form-control" id="synopsis" name="synopsis" placeholder="Book synopsis" required>
        </div>
        <div>
          <label for="members">Members</label>
          <input type="checkbox" class="form-control" id="members" name="">
          <p><%= users[2].userName %></p>
        </div>
        <button type="submit" class="btn btn-primary login-button" value="Upload">Submit</button>
      </form>
    </div>

  </div>
</div>
<%- include('partials/footer') -%>